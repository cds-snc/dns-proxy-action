{
	"name": "Go",
	"image": "mcr.microsoft.com/devcontainers/go:1-1.22-bullseye",
	"containerEnv": {
		"SHELL": "/bin/zsh"
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "dnsutils"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-yaml",
				"github.copilot"
			]
		},
		"codespaces": {
			"extensions": [
				"redhat.vscode-yaml",
				"github.copilot"
			]
		}	
	},

	"remoteUser": "vscode"
}